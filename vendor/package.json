{
  "name": "arduino-vibration-backend",
  "version": "1.0.0",
  "description": "Backend server to control Arduino vibration motor via HTTP",
  "main": "main.js",
  "scripts": {
    "start": "node server.js",
    "electron": "electron .",   
    "build": "electron-builder",  
    "dist": "npm run build"     
  },
  "author": "MuT_phfa",
  "icon": "icon.png",

  "dependencies": {
    "axios": "^1.6.7",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "electron": "^39.2.6",
    "electron-builder": "^24.0.0"
  },
  "build": {
    "appId": "com.MuT.arduino-vibration-control",
    "productName": "Arduino Vibration Control",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/**",
      "node_modules/**",
      "public/**"
    ],
    "asarUnpack": ["server.js","public/**"],

    "mac": false,

    "win": {
      "target": "nsis"
    },
    "linux": false
  }
}
